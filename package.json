{
  "name": "loopinfinito",
  "version": "2.0.0",
  "description": "Loop Infinito's website.",
  "keywords": [
    "loopinfinito",
    "l8p",
    "blog",
    "site"
  ],
  "homepage": "http://loopinfinito.com.br",
  "repository": {
    "type": "git",
    "url": "https://github.com/loopinfinito/loopinfinito.com.br.git"
  },
  "bugs": "https://github.com/loopinfinito/loopinfinito.com.br/issues",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "node index"
  },
  "contributors": [
    {
      "name": "Almir Filho",
      "email": "almir@almirfilho.com",
      "url": "https://about.me/almirfilho"
    },
    {
      "name": "Caio Gondim",
      "email": "me@caiogondim.com",
      "url": "https://twitter.com/caio_gondim"
    }
  ],
  "engines": {
    "node": ">=4.0.0"
  },
  "devDependencies": {
    "consolidate": "^0.14.0",
    "metalsmith": "^2.1.0",
    "metalsmith-collections": "^0.7.0",
    "metalsmith-date-in-filename": "0.0.14",
    "metalsmith-filemetadata": "^1.0.0",
    "metalsmith-in-place": "^1.4.3",
    "metalsmith-layouts": "^1.6.4",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-metallic": "^0.3.1",
    "metalsmith-pagination": "^1.4.0",
    "metalsmith-permalinks": "^0.5.0",
    "metalsmith-slug": "^0.2.0",
    "metalsmith-tags": "^1.2.1",
    "metalsmith-watch": "^1.0.1",
    "nunjucks": "^2.4.1"
  },
  "config": {
    "contentDir": "src/content",
    "nunjucks": {
      "autoescape": false
    },
    "metalsmith": {
      "collections": {
        "posts": {
          "pattern": "posts/*.md",
          "sortBy": "date",
          "reverse": true
        }
      },
      "slug": {
        "lower": true
      },
      "filemetadata": [
        {
          "pattern": "posts/*.md",
          "metadata": {
            "layout": "post.html"
          }
        }
      ],
      "markdown": {
        "smartypants": true
      },
      "permalinks": {
        "linksets": [
          {
            "pattern": "posts/:date/:slug/",
            "match": {
              "collection": "posts"
            }
          }
        ]
      },
      "pagination": {
        "collections.posts": {
          "perPage": 5,
          "layout": "list.html",
          "first": "index.html",
          "path": "page/:num/index.html",
          "noPageOne": true
        }
      },
      "tags": {
        "path": "tag/:tag/index.html",
        "layout": "list.html",
        "sortBy": "date",
        "reverse": true,
        "perPage": 5,
        "pathPage": "tag/:tag/:num/index.html"
      },
      "layouts": {
        "engine": "nunjucks",
        "directory": "src/templates/layouts",
        "partials": "src/templates/partials"
      },
      "watch": {
        "paths": {
          "src/content/**/*.md": true
        }
      }
    }
  }
}
