{
  "serverPort": 8888,
  "contentDir": "src/content",
  "buildDir": "build",
  "nunjucks": {
    "autoescape": false
  },
  "metalsmith": {
    "metadata": {
      "site": "site.yaml",
      "authors": "authors.yaml"
    },
    "filemetadata": [{
      "pattern": "posts/**/*.md",
      "metadata": {
        "layout": "post.html",
        "priority": 1.0,
        "changefreq": "yearly"
      }
    }],
    "collections": {
      "posts": {
        "pattern": "posts/**/*.md",
        "sortBy": "date",
        "reverse": true
      },
      "projects": {
        "pattern": "projetos/items/*.md",
        "sortBy": "order",
        "reverse": true
      },
      "talks": {
        "pattern": "palestras/items/*.md",
        "sortBy": "date",
        "reverse": true
      }
    },
    "author": {
      "collection": "posts"
    },
    "slug": {
      "lower": true
    },
    "ignore": [
      "palestras/items/*",
      "projetos/items/*"
    ],
    "markdown": {
      "smartypants": true
    },
    "propdown": {
      "collection": "posts",
      "property": "excerpt",
      "markdownOptions": {
        "smartypants": true
      }
    },
    "pagination": {
      "collections.posts": {
        "perPage": 5,
        "layout": "posts.html",
        "first": "index.html",
        "path": "page/:num/index.html",
        "noPageOne": true,
        "pageMetadata": {
          "priority": 0.8
        }
      }
    },
    "tags": {
      "perPage": 5,
      "layout": "tags.html",
      "path": "tags/:tag/index.html",
      "pathPage": "tags/:tag/:num/index.html",
      "sortBy": "date",
      "reverse": true,
      "metadataKey": "allTags"
    },
    "permalinks": {
      "linksets": [{
        "pattern": ":date/:slug/",
        "match": {
          "collection": "posts"
        }
      }]
    },
    "mapsite": {
      "hostname": "http://loopinfinito.com.br",
      "omitIndex": true,
      "priority": 0.6,
      "changefreq": "weekly"
    },
    "feedatom": {
      "collection": "posts",
      "destination": "feed/index.xml",
      "limit": 10,
      "metadata": {
        "title": "Loop Infinito",
        "url": "http://loopinfinito.com.br"
      }
    },
    "layouts": {
      "engine": "nunjucks",
      "directory": "src/templates/layouts",
      "partials": "src/templates/partials"
    },
    "watch": {
      "paths": {
        "src/content/**/*.md": true
      }
    }
  }
}
